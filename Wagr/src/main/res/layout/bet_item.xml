<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="betSelected">

    <TextView
        android:id="@+id/stake"
        android:text="5000"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textColor="#a99c10"
        android:layout_alignBaseline="@+id/details"
        android:layout_alignBottom="@+id/details"
        android:layout_alignRight="@+id/user2"
        android:layout_alignEnd="@+id/user2" />

    <TextView
        android:id="@+id/resolvedOn"
        android:inputType="date"
        android:text="02/02/18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textColor="#000dff"
        android:layout_alignTop="@+id/betPlacedOn"
        android:layout_alignRight="@+id/stake"
        android:layout_alignEnd="@+id/stake" />

    <TextView
        android:id="@+id/user2"
        android:text="User2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textColor="#000dff"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="45dp"
        android:layout_alignBaseline="@+id/user1"
        android:layout_alignBottom="@+id/user1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/user1"
        android:text="User1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textColor="#000dff"
        android:layout_marginTop="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp" />

    <TextView
        android:id="@+id/details"
        android:text="details"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textColor="#ff0019"
        android:layout_marginTop="69dp"
        android:layout_below="@+id/user1"
        android:layout_toRightOf="@+id/user1"
        android:layout_toEndOf="@+id/user1" />

    <TextView
        android:id="@+id/betResolvedOn_header"
        android:text="Bet deadline:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8dp"
        android:layout_above="@+id/resolvedOn"
        android:layout_alignLeft="@+id/resolvedOn"
        android:layout_alignStart="@+id/resolvedOn" />

    <TextView
        android:id="@+id/betPlacedOn"
        android:inputType="date"
        android:text="02/02/17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textColor="#000dff"
        android:layout_marginTop="99dp"
        android:layout_below="@+id/details"
        android:layout_alignLeft="@+id/user1"
        android:layout_alignStart="@+id/user1" />

    <TextView
        android:id="@+id/betPlacedOn_header"
        android:text="Bet placed on:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8dp"
        android:layout_alignBaseline="@+id/betResolvedOn_header"
        android:layout_alignBottom="@+id/betResolvedOn_header"
        android:layout_alignLeft="@+id/betPlacedOn"
        android:layout_alignStart="@+id/betPlacedOn" />

    <TextView
        android:id="@+id/pound_sign"
        android:textColor="#a99c10"
        android:text="Â£"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/stake"
        android:layout_alignBottom="@+id/stake"
        android:layout_toLeftOf="@+id/stake"
        android:layout_toStartOf="@+id/stake" />

</RelativeLayout>