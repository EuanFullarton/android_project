<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_bet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="example.codeclan.com.wagr.NewBetActivity">

    <TextView
        android:id="@+id/new_bet_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add new bet" />

    <Button
        android:id="@+id/submit_new_bet_button"
        android:text="Create new bet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/resolution_date_header"
        android:layout_alignStart="@+id/resolution_date_header" />

    <DatePicker
        android:id="@+id/input_resolution_date"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginBottom="44dp"
        android:layout_above="@+id/submit_new_bet_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></DatePicker>

    <TextView
        android:id="@+id/resolution_date_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose bet deadline"
        android:layout_above="@+id/input_resolution_date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/input_bet_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Type bet details"
        android:layout_above="@+id/input_bet_category"
        android:layout_alignRight="@+id/submit_new_bet_button"
        android:layout_alignEnd="@+id/submit_new_bet_button" />

    <EditText
        android:id="@+id/input_stake"
        android:inputType="number"
        android:hint="Enter bet stake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="81dp"
        android:layout_above="@+id/resolution_date_header"
        android:layout_alignRight="@+id/input_resolution_date"
        android:layout_alignEnd="@+id/input_resolution_date" />

    <EditText
        android:id="@+id/input_bet_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Type bet category"
        android:layout_alignTop="@+id/input_stake"
        android:layout_alignLeft="@+id/input_bet_details"
        android:layout_alignStart="@+id/input_bet_details"
        android:layout_marginTop="28dp" />

    <Spinner
        android:id="@+id/select_user_1"
        android:text="@string/select_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="Select User1"
        android:layout_above="@+id/input_bet_details"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp"
        android:spinnerMode="dropdown"></Spinner>

    <Spinner
        android:id="@+id/select_user_2"
        android:text="Select user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="Select User2"
        android:layout_alignTop="@+id/select_user_1"
        android:layout_toRightOf="@+id/input_bet_category"
        android:layout_toEndOf="@+id/input_bet_category"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"></Spinner>


</RelativeLayout>
